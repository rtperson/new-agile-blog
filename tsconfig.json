{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target":  "es5",
    "sourceMap": true,

    "noImplicitAny": true,
    "baseUrl": ".",
    "noEmit": true,
    "types": ["jest", "node"],
    "lib": ["ES2015", "DOM"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "src/*.spec.ts"
  ],
  "include": [
      "src/*",
      "src/**/*",
      "spike/**/*"
    ]
}
