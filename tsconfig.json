{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
      "src/**/*",
      "tests/**/*"
    ]
}
